    "next": "^14.0.0",
    "pdf-parse": "^2.2.2",
    "pdfjs-dist": "3.11.174",
    "pg": "^8.11.0",
    "postcss": "^8.4.0",
    "prisma": "^6.19.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "zod": "^4.1.13"
