  "description": "高山滑雪竞赛管理和积分计算系统",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:github": "bash scripts/build-static.sh",
    "build:direct": "DIRECT_DEPLOY=true npm run build",
    "export": "next export",
    "deploy:github": "npm run build:github && touch out/.nojekyll",
    "deploy:pages": "cd .. && ./deploy-github-pages.sh",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "demo": "bash scripts/quick-demo.sh",
    "share:vercel": "bash scripts/deploy-vercel.sh",
    "share:ngrok": "bash scripts/ngrok-share.sh",
    "audit": "node tools/audit.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "prisma": {
    "seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
